<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sample.rm39951.demonavigationdrawer.Fragments.FormularioFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo"
        android:textSize="@dimen/titulo"
        android:textStyle="bold"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/valor_1" />
    <EditText
        android:id="@+id/txtValor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hintValor"
        android:inputType="number"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/valor_2" />
    <EditText
        android:id="@+id/txtValor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hintValor"
        android:inputType="number" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_width="@dimen/default_button_size"
        android:layout_height="@dimen/default_button_size"
        android:id="@+id/btnSoma"
        android:text="+" />
    <Button
        android:layout_width="@dimen/default_button_size"
        android:layout_height="@dimen/default_button_size"
        android:id="@+id/btnSubtracao"
        android:text="-" />
    <Button
        android:layout_width="@dimen/default_button_size"
        android:layout_height="@dimen/default_button_size"
        android:id="@+id/btnMultiplicacao"
        android:text="*" />
    <Button
        android:layout_width="@dimen/default_button_size"
        android:layout_height="@dimen/default_button_size"
        android:id="@+id/btnDivisao"
        android:text="/"/>
    </LinearLayout>
    <TextView
        android:id="@+id/lblResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />
</LinearLayout>
</FrameLayout>
